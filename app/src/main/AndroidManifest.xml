<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.guest.forumclass">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.CreateAccountActivity"/>
        <activity android:name=".ui.BaseActivity"/>
        <activity
            android:name=".ui.LoginActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddPostActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.CategoriesActivity"/>
        <activity android:name=".ui.PostDetailActivity"/>
        <activity
            android:name=".ui.ChatListActivity"
            android:label="@string/title_activity_tab"/>
        <activity android:name=".ui.AddChatActivity"/>
        <activity android:name=".ui.ChatActivity">
        </activity>
    </application>

</manifest>